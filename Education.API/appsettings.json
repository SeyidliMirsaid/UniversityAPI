{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DbConnect": "Data Source=DESKTOP-NL8U42S; Initial Catalog=UniversityApi; Trusted_connection=true; Integrated security=true; TrustServerCertificate=true;"
  },
  "JwtSettings": {
    // ====== SECRET KEY ======
    // Niyə? - Token sign/verify üçün gizli açar
    // Niyə 32+ character? - Brute force attack qarşısını almaq
    // HƏR ZAMAN PRODUCTION-DA DƏYİŞDİRİN!
    "SecretKey": "your-super-secret-key-minimum-32-characters-long-here",

    // ====== ISSUER ======
    // Niyə? - Token-i kim yaradıb (server app)
    "Issuer": "Education.API",

    // ====== AUDIENCE ======
    // Niyə? - Token kim üçündür (client app)
    "Audience": "Education.Client",

    // ====== TOKEN EXPIRY ======
    // Niyə? - Token-in neçə dəqiqə etibarlı olacağı
    "AccessTokenExpiryMinutes": 120, // 2 saat

    // ====== REFRESH TOKEN EXPIRY ======
    // Niyə? - Refresh token-in neçə gün etibarlı olacağı
    "RefreshTokenExpiryDays": 7
  }
}
